doctype html
include components/links
include components/columns
include components/section
include components/footer
include components/experience

head
  include partials/head

body.bg-white.bg-light-gray-page.bg-white-p.dark-gray(class= process.env.NODE_ENV == 'print' ? 'helvetica' : 'sans-serif')
  article.mw-page.mv-5-page.center.ma0-p.shadow-2-page.lh-title
    include partials/header

    main.pv3.ph4.bg-white
      block content

        if person.intro
          section.cf.mb4.mb3-ns.mb3-p.ph3
            =person.intro

        if person.proficiencies
          +section-title('Proficiencies')
          +section
            ul.list.ph3
              each items, category in person.proficiencies
                li
                  b= category + ': '
                  span= items.join(', ')
  
        if site.jobs > 0
          +section-title
            +accent-link('Experience', '/resume/experience')
          +main-section
            for exp in collections.experience
              if (exp && exp.published)
                +experience(exp)

        if site.schools > 0
          +section-title
            +accent-link('Education', '/resume/education')
          +main-section
            for exp in collections.education
              if (exp && exp.published)
                +small_experience(exp)
        //-
          p
            br
            br
        if site.projects > 0
          +section-title
            +accent-link('Open Source Projects', '/resume/projects')
          +main-section
            for exp in collections.projects
              if (exp && exp.published)
                +experience(exp)

        if person.email && site.references
          footer
            p.tr
              a.link.mid-gray.underline-hover(href='mailto:' + person.email)= 'References available upon request'

  if site.promolink
    footer.pb4.tc.dn.dn-p.db-page
      p Made with #[+accent-link('Metalsmith Resume', 'https://github.com/lowmess/metalsmith-resume')] by #[+accent-link('@lowmess', 'https://github.com/lowmess/')]
