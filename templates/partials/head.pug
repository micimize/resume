meta(charset="UTF-8")
meta(content="width=device-width, initial-scale=1", name="viewport")
meta(http-equiv="X-UA-Compatible", content="IE=edge")
meta(name="theme-color", content=site.theme)

meta(name="description", content=site.description)

//- Open Graph / Twitter Card
if person.twitter
  meta(name="twitter:site", content=person.twitter)
meta(name="twitter:card", content="summary")
meta(property="og:title", name="twitter:title", content=site.title)
meta(property="og:url", content=path)
meta(property="og:description", name="twitter:description", content=site.description)

title= site.title

//- Create theme color classes:
-
  function getTextColor () {
    var darkgray = '#333333'
    var white = '#ffffff'

    if (contrast.ratio(site.theme, white) >= 3.5) {
      return white
    } else {
      return darkgray
    }
  }

  function getAccentColor () {
    var darkgray = '#333333'
    var white = '#ffffff'

    if (contrast.ratio(site.theme, white) >= 3.5) {
      return site.theme
    } else {
      return darkgray
    }
  }

style.
  .bg-accent { background-color: #{site.theme}; }
  .bg-accent-text { color: #{getTextColor()}; }
  .accent { color: #{getAccentColor()}; }
  .b--accent { border-color: #{site.theme}; }
  ::selection {
    background-color: #{site.theme};
    color: #{getTextColor()};
  }

if process.env.NODE_ENV == 'print'
  style.
    html { font-size: 75%; }

link(rel="stylesheet", type="text/css", href="{site.baseurl}/css/main.css")
